#include <iostream>
#include <string>
#include <algorithm>

double* get_numbers(double* numbers, int size)
{
	std::string num;
	for (int i = 0; i < size; i++)
	{
		start:
		std::cout<<"input number "<<i+1<<": ";
		std::cin>>num;
		try
		{
			numbers[i] = std::stod(num);
		}
		catch (std::exception& e)
		{
			std::cerr<<e.what()<<'\n';
			goto start;
		}
	}
	return numbers;
}

int main()
{
	
	double numbers[10];
	int size = sizeof(numbers)/sizeof(numbers[0]);
	get_numbers(numbers, size);
	std::sort(numbers, numbers+size);
	double max = numbers[size-1];
	double min = numbers[0];
	double sum=0;
	for (int i = 0; i<size; ++i)
		sum += numbers[i];
	double average = sum/size;
	
	std::cout<<"max: "<<max<<'\n';
	std::cout<<"min: "<<min<<'\n';
	std::cout<<"sum: "<<sum<<'\n';
	std::cout<<"average: "<<average<<'\n';
	
	std::cin.get();
	std::cin.get();
	return 0;
}
